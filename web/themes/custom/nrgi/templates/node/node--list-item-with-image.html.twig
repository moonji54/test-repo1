{% if view.exposed_data %}
  {% include '@nrgi/card-partials/listing-card.html.twig' with {
    content_type: content_type,
    url : url,
    slug: slug,
    external_link: external_link,
    subtype: subtype ?: content_type_label,
    date: date|upper,
    title : label,
    show_image : true
  } %}
{% else %}
  {% include '@nrgi/card-partials/featured-card.html.twig' with {
    content_type: content_type,
    url : url,
    slug: slug,
    external_link: external_link,
    subtype: subtype ?: content_type_label,
    date: date|upper,
    title : label,
    show_image : true,
    layout : 'three-col',
  } %}
{% endif %}

