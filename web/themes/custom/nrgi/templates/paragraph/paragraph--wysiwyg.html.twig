{% set classes = [
  'c-text-block',
  'o-section',
] %}

{% set rendered = content|render %}
{% if rendered|striptags|trim is not empty %}
  <section{{ attributes.addClass(classes) }}>
    <div class="c-text-block__container o-container">
      <div class="c-text-block__inner o-content-from-editor js-text-block">
        {{ rendered }}
      </div>
    </div>
  </section>
{% endif %}
